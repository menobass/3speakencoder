{
  "name": "3speak-encoder-modern",
  "version": "1.0.0",
  "description": "Modern, reliable 3Speak video encoder with full API compatibility",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsx --expose-gc --max-old-space-size=12288 src/index.ts",
    "start:compiled": "node --expose-gc --max-old-space-size=12288 dist/index.js",
    "dev": "tsx --expose-gc --max-old-space-size=12288 src/index.ts --watch",
    "setup": "tsx scripts/setup.ts",
    "test-services": "tsx src/test-services.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/dashboard && cp -r src/dashboard/* dist/dashboard/",
    "watch": "tsc --watch",
    "test": "vitest",
    "validate-config": "node scripts/validate-config.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "3speak",
    "video",
    "encoder",
    "ffmpeg",
    "hls",
    "ipfs",
    "blockchain"
  ],
  "author": "3Speak Network",
  "license": "MIT",
  "dependencies": {
    "@noble/ed25519": "^2.1.0",
    "@types/express": "^5.0.3",
    "@types/form-data": "^2.2.1",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.18.1",
    "axios": "^1.7.7",
    "dids": "^5.0.3",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.4",
    "ipfs-http-client": "^60.0.1",
    "key-did-provider-ed25519": "^4.0.2",
    "key-did-resolver": "^4.0.0",
    "node-cron": "^4.2.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^22.9.1",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "tsx": "^4.20.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
